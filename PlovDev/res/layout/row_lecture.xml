<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.proxiad.plovdev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <com.proxiad.plovdev.utils.CircularImageView
        android:id="@+id/imageSpeakerPortrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:border="true"
        app:shadow="true" />

    <TextView
        android:id="@+id/timePeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageSpeakerPortrait"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#33B5E5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePeriod"
        android:layout_toRightOf="@+id/imageSpeakerPortrait"
        android:maxLines="3"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>